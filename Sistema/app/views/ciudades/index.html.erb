<p id="notice"><%= notice %></p>

<h1>Ciudades</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ciudades.each do |ciudade| %>
      <tr>
        <td><%= ciudade.descripcion %></td>
        <td><%= ciudade.activo %></td>
        <td><%= link_to 'Show', ciudade %></td>
        <td><%= link_to 'Edit', edit_ciudade_path(ciudade) %></td>
        <td><%= link_to 'Destroy', ciudade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ciudade', new_ciudade_path %>
