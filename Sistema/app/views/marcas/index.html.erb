<p id="notice"><%= notice %></p>

<h1>Marcas</h1>
                      <!-- formulario de busqueda -->
  <%= form_tag marcas_path, method: :get do %>
      <div class="form-group">
          <%= text_field_tag :marca_descrip, params[:marca_descrip], class: "form-control", placeholder: "Descripcion" %>
      </div>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
  <% end %>
                      <!-- fin formulario de busqueda -->
<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marcas.each do |marca| %>
      <tr>
        <td><%= marca.marca_descrip %></td>
        <% if marca.marca_active == true %>
          <td>Activo</td>
        <% else %>
          <td>Activo</td>
        <% end %>
        <td><%= link_to 'Mostrar', marca %></td>
        <td><%= link_to 'Editar', edit_marca_path(marca) %></td>
        <td><%= link_to 'Eliminar', marca, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Marca', new_marca_path %>
