<p id="notice"><%= notice %></p>

<h1>Categories</h1>
                      <!-- formulario de busqueda -->
  <%= form_tag categories_path, method: :get do %>
      <div class="form-group">
          <%= text_field_tag :category_descrip, params[:category_descrip], class: "form-control", placeholder: "Descripcion" %>
      </div>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
  <% end %>
                      <!-- fin formulario de busqueda -->
<table>
  <thead>
    <tr>
      <th>Category descrip</th>
      <th>Category active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_descrip %></td>
        <td><%= category.category_active %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

