<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>

                      <!-- formulario de busqueda -->
  <%= form_tag proveedores_path, method: :get do %>
      <div class="form-group">
          <%= text_field_tag :razon_social, params[:razon_social], class: "form-control", placeholder: "Razon social" %>
      </div>
      <%= submit_tag "Buscar", name: nil, class: "btn btn-primary btn-md" %>
  <% end %>
                      <!-- fin formulario de busqueda -->

<table>
  <thead>
    <tr>
      <th>Razon social</th>
      <th>Ruc</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Email</th>
      <th>Prov activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedores.each do |proveedore| %>
      <tr>
        <td><%= proveedore.razon_social %></td>
        <td><%= proveedore.ruc %></td>
        <td><%= proveedore.direccion %></td>
        <td><%= proveedore.telefono %></td>
        <td><%= proveedore.email %></td>
        <td><%= proveedore.prov_activo %></td>
        <td><%= link_to 'Show', proveedore %></td>
        <td><%= link_to 'Edit', edit_proveedore_path(proveedore) %></td>
        <td><%= link_to 'Destroy', proveedore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Proveedore', new_proveedore_path %>
