<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table>
  <thead>
    <tr>
      <th>Prod descrip</th>
      <th>Iva</th>
      <th>Prod active</th>
      <th>Proveedore</th>
      <th>Marca</th>
      <th>Sub category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.prod_descrip %></td>
        <td><%= producto.iva %></td>
        <td><%= producto.prod_active %></td>
        <td><%= producto.proveedore %></td>
        <td><%= producto.marca %></td>
        <td><%= producto.sub_category %></td>
        <td><%= link_to 'Show', producto %></td>
        <td><%= link_to 'Edit', edit_producto_path(producto) %></td>
        <td><%= link_to 'Destroy', producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

